{
  "name": "where-is-my-metro",
  "version": "1.0.0",
  "description": "Multi-city metro journey planner PWA with Go-powered data validation",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run go:serve\"",
    "build": "npm run build:backend && npm run build:frontend && npm run go:build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "go:build": "cd go-tools && go build -o metro-validator.exe ./cmd/metro-validator",
    "go:validate": "cd go-tools && ./metro-validator.exe --db ../backend/data/metro.db",
    "go:validate:json": "cd go-tools && ./metro-validator.exe --db ../backend/data/metro.db --json",
    "go:serve": "cd go-tools && ./metro-validator.exe serve --db ../backend/data/metro.db",
    "db:seed": "cd backend && npm run db:seed",
    "db:studio": "cd backend && npm run db:studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
